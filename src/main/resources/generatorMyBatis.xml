    </javaTypeResolver>

    <javaModelGenerator targetPackage="com.example.chatapp.model" targetProject="chatAppDemo1">    </javaModelGenerator>

    <sqlMapGenerator targetPackage="com.example.chatapp.mapper.sql"  targetProject="chatAppDemo1/src/main/resources"></sqlMapGenerator>

    <javaClientGenerator type="XMLMAPPER" targetPackage="com.example.chatapp.mapper"  targetProject="chatAppDemo1"></javaClientGenerator>

    <table schema="chat_app" tableName="user" domainObjectName="User" ></table>
    
    <table schema="chat_app" tableName="message" domainObjectName="Message" ></table>
    
    <table schema="chat_app" tableName="friendrequest" domainObjectName="FriendRequest" ></table>
    
